@page "/owners/{OwnerId:int}"

@using StartAndPark.Client.Components
@using StartAndPark.Client.Components.Forms

@inject HttpClient http
@inject NavigationManager navigationManager

<ManagementPage TItem="Owner"
                ManagePath="owners"
                Title="Owner"
                IdField="@(x => x.Id)"
                ItemId="@OwnerId">
        <InputGroup Label="Name" Colspan="12">
            <InputText @bind-Value="@context.Name" class="form-control form-control-sm" />
        </InputGroup>
</ManagementPage>

@code {
    [Parameter]
    public int OwnerId { get; set; }
}
